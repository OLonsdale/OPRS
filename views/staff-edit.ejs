<div class="row mt-5">
  <div class="row-col-auto m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-edit"></i> Edit <%= staff.name %> 
      </h1>
      <% include partials/messages %>
      <form action="" method="POST" enctype="text/json">

        <div class="mb-3">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Create Password"
          value="<%= typeof staff.name != 'undefined' ? staff.name : '' %>" />
        </div>

        <div class="mb-3">
          <label for="optometrist" class="form-label">Active Optometrist:</label>
          <input type="checkbox" class="form-check-input" id="optometrist" name="optometrist" value="true" />
          <script> if("<%= staff.optometrist %>"){ optometrist.checked = true } </script>
        </div>

        <div class="mb-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="mb-3">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>

        <input type="submit" class="btn btn-primary">

      </form>
    </div>
  </div>
</div>
